<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbk"
    tools:context="project.ann.pee.studentappointment.ShowActivity">

    <include android:id="@+id/toolbar_main" layout="@layout/toolbar_main" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="title"
        android:id="@+id/titleView"
        android:layout_below="@+id/toolbar_main"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"

            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:id="@+id/contentView" />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/titleView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_name"
            android:text="Location :"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/titleView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location "
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:id="@+id/location"
            android:paddingTop="16dp"
            android:layout_alignBottom="@+id/location_name"
            android:layout_toEndOf="@+id/location_name" />


          <TextView
            android:id="@+id/contact__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Contact :"
            android:layout_alignParentStart="true"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/location_name"/>


        <TextView
            android:id="@+id/contactView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="contact"
            android:paddingLeft="16dp"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:paddingTop="16dp"
            android:layout_above="@+id/dateStart_name"
            android:layout_toEndOf="@+id/location_name" />

    <TextView
        android:id="@+id/dateStart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact__name"
        android:text="Date Start :"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/timeStart_name"
        android:layout_below="@+id/dateStart_name"
        android:text="Time Start :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/dateEnd_name"
        android:text="Date End :"
        android:layout_below="@+id/timeStart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true" />

     <TextView
         android:id="@+id/timeEnd_name"
         android:text="Time End :"
         android:layout_below="@+id/dateEnd_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingLeft="@dimen/activity_horizontal_margin"
         android:paddingTop="@dimen/activity_horizontal_margin"
         android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timeEnd"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:id="@+id/timeEnd"
        android:layout_below="@+id/dateEnd_name"
        android:layout_alignStart="@+id/timeStart" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timeStart"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:id="@+id/timeStart"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/dateStart_name"
        android:layout_alignStart="@+id/dateStart" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dateStart"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:id="@+id/dateStart"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_alignTop="@+id/dateStart_name"
        android:layout_alignStart="@+id/contactView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dateEnd"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:id="@+id/dateEnd"
        android:layout_below="@+id/timeStart_name"
        android:layout_toEndOf="@+id/dateEnd_name" />


</RelativeLayout>

</RelativeLayout>
